{
  "name": "chatgpt_telegram_bot_stats_backend",
  "version": "1.0.0",
  "description": "Backend service: ChatGPT-Telegram-Bot statistic API",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "cross-env NODE_ENV=production node ./build/rest-api/www",
    "watch": "cross-env NODE_ENV=development nodemon -e ts -w src -x npm run watch:serve",
    "watch:serve": "ts-node src/rest-api/www",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "setup-commit": "npx cz-customizable",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@types/config": "3.3.0",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/validator": "13.7.17",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "commitizen": "4.3.0",
    "cz-customizable": "7.0.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^8.0.0",
    "nodemon": "2.0.22",
    "rimraf": "5.0.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "@elastic/elasticsearch": "8.7.0",
    "config": "3.3.9",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "helmet": "7.0.0",
    "livr": "2.5.0",
    "validator": "13.9.0"
  }
}
